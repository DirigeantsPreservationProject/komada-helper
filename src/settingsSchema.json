{
  "$schema": "http://json-schema.org/draft-04/schema",
  "title": "Komada settings schema schema",

  "type": "object",
  "required": ["prefix", "modRole", "adminRole", "disabledCommands"],

  "patternProperties": {
    ".{1,}": {
      "title": "Setting key",
      "type": "object",
      "required": ["type", "default"],
  
      "properties": {
        "type": {
          "type": "string",
          "enum": ["User", "Channel", "Guild", "Role", "Boolean", "String", "Integer", "Float", "url", "Command"],
          "description": "The data type"
        },
        "default": {
          "type": ["string", "null", "array", "boolean", "integer", "number"],
          "description": "The default value for the setting",
          "default": null
        },
        "array": {
          "type": "boolean",
          "description": "If the value is an array",
          "default": false
        }
      }
    }
  },
  "additionalProperties": false
}
